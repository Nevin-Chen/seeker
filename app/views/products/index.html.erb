<div class="mb-6 flex items-center justify-between">
  <div>
    <h1 class="text-2xl font-semibold text-gray-900">My Products</h1>
  </div>
  <%= link_to new_product_path,
    class: "relative inline-flex items-center gap-1.5 rounded-full border border-transparent bg-blue-400 px-3 py-2 text-sm font-semibold text-white hover:bg-blue-500 transition appearance-none" do %>
    <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="h-5 w-5">
      <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
    </svg>
    Track new product
  <% end %>
</div>

<% if @products.any? %>
  <div class="bg-white rounded-lg divide-y">
    <% @products.each do |product| %>
      <% alert = product.price_alerts.first %>
      <div class="p-4 hover:bg-gray-50 transition-colors">
        <div class="flex items-center gap-4">
          <div class="flex-1 min-w-0">
            <%= link_to product, class: "block group" do %>
              <div class="font-medium text-gray-900 truncate group-hover:text-gray-700 transition-colors">
                <%= product.name %>
              </div>
              <div class="text-xs text-gray-500 truncate mt-0.5">
                <%= URI.parse(product.url).host %>
              </div>
            <% end %>
          </div>

          <% if product.current_price %>
            <div class="flex items-center gap-6">
              <div class="text-right">
                <div class="text-xs text-gray-500 mb-0.5">Current</div>
                <div class="text-sm font-semibold text-gray-900">
                  $<%= number_with_precision(product.current_price, precision: 2) %>
                </div>
              </div>

              <div class="text-right">
                <div class="text-xs text-gray-500 mb-0.5">Target</div>
                <div class="text-sm font-semibold text-gray-600">
                  $<%= number_with_precision(alert.target_price, precision: 2) %>
                </div>
              </div>

              <div>
                <% if alert.price_dropped? %>
                  <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-green-100 text-green-800 text-xs font-medium">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Below target
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full bg-gray-100 text-gray-600 text-xs font-medium">
                    Tracking
                  </span>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="flex items-center gap-2 text-gray-400 text-xs">
              <svg class="w-3 h-3 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Checking
            </div>
          <% end %>

          <div class="flex items-center gap-1">
            <%= link_to product, class: "p-1.5 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-full transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            <% end %>
            <%= button_to price_alert_path(alert), method: :delete,
                         data: { confirm: "Remove this product?" },
                         class: "p-1.5 text-gray-400 hover:text-red-600 hover:bg-gray-100 rounded-full transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="bg-white rounded-lg p-12 text-center">
    <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 mb-4">
      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
      </svg>
    </div>
    <h3 class="text-base font-medium text-gray-900 mb-1">No products yet</h3>
    <p class="text-sm text-gray-600 mb-6">Start tracking your first product to get price alerts</p>
  </div>
<% end %>

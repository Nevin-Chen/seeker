<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Track New Product</h1>
    <p class="mt-1 text-sm text-gray-600">Add a product URL and set your target price</p>
  </div>

  <%= form_with model: @product, class: "bg-white rounded-lg p-6" do |f| %>
    <% if @product.errors.any? %>
      <div class="bg-red-50 rounded-lg p-4 mb-6">
        <h3 class="text-sm font-medium text-red-800 mb-2">
          <%= pluralize(@product.errors.count, "error") %> prevented this product from being saved:
        </h3>
        <ul class="list-disc list-inside text-sm text-red-700">
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-5">
      <div>
        <%= f.label :name, "Product Name", class: "block text-sm font-medium text-gray-900 mb-2" %>
        <%= f.text_field :name, required: true, 
                         placeholder: "e.g., iPhone 15 Pro",
                         class: "w-full px-3 py-2 bg-white rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400 transition" %>
      </div>

      <div>
        <%= f.label :url, "Product URL", class: "block text-sm font-medium text-gray-900 mb-2" %>
        <%= f.url_field :url, required: true, 
                        placeholder: "https://www.amazon.com/product/...",
                        class: "w-full px-3 py-2 bg-white rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400 transition" %>
        <p class="mt-2 text-xs text-gray-500">Paste the full URL of the product page</p>
      </div>

      <div>
        <%= f.label :sku, "SKU (optional)", class: "block text-sm font-medium text-gray-900 mb-2" %>
        <%= f.text_field :sku,
                         placeholder: "Product SKU if available",
                         class: "w-full px-3 py-2 bg-white rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400 transition" %>
      </div>

      <div>
        <%= f.label :target_price, "Target Price", class: "block text-sm font-medium text-gray-900 mb-2" %>
        <div class="relative">
          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-sm">$</span>
          <%= f.number_field :target_price, step: 0.01, required: true,
                             placeholder: "99.99",
                             class: "w-full pl-8 pr-3 py-2 bg-white rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400 transition" %>
        </div>
        <p class="mt-2 text-xs text-gray-500">You'll be notified when the price reaches this amount or lower</p>
      </div>
    </div>

    <div class="flex items-center gap-3 mt-6 pt-6 border-t">
      <%= f.submit "Track Product", class: "relative inline-flex items-center gap-1.5 rounded-full border border-transparent bg-blue-400 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-500 transition appearance-none cursor-pointer" %>
      <%= link_to "Cancel", products_path, class: "text-sm text-gray-700 hover:text-gray-900 transition" %>
    </div>
  <% end %>
</div>

<% if flash[:notice] %>
  <div data-controller="flash" class="fixed top-4 left-1/2 -translate-x-1/2 z-50 flex items-center justify-between gap-3 bg-green-50 border border-green-200 text-green-900 px-4 py-3 rounded-lg text-sm shadow-lg max-w-md">
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
      <%= flash[:notice] %>
    </div>
    <button data-action="click->flash#dismiss" class="text-green-600 hover:text-green-800 transition-colors">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div data-controller="flash" class="fixed top-4 left-1/2 -translate-x-1/2 z-50 flex items-center justify-between gap-3 bg-red-50 border border-red-200 text-red-900 px-4 py-3 rounded-lg text-sm shadow-lg max-w-md">
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
      </svg>
      <%= flash[:alert] %>
    </div>
    <button data-action="click->flash#dismiss" class="text-red-600 hover:text-red-800 transition-colors">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>

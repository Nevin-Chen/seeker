<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
    <h1 class="text-2xl font-bold text-center text-gray-900 mb-6">Create an account</h1>

    <% if @user.errors.any? %>
      <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-md">
        <h2 class="text-red-800 font-semibold text-sm mb-2"><%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:</h2>
        <ul class="list-disc list-inside text-sm text-red-700">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: signup_path, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :username, required: true, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" %>
      </div>

      <div>
        <%= form.label :email_address, "Email Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :email_address, required: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" %>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" %>
      </div>

      <%= form.submit "Sign Up", class: "w-full bg-indigo-600 text-white font-medium py-2 rounded-md hover:bg-indigo-700 transition duration-200" %>
    <% end %>

    <div class="mt-6 text-center text-sm">
      Already have an account? <%= link_to "Log in", login_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
    </div>
  </div>
</div>

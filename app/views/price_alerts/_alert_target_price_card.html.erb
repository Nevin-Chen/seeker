<div data-controller="inline-edit">
  <div class="flex items-center justify-between gap-2 pb-1">
    <span class="text-gray-500">Target</span>
    <div data-inline-edit-target="display" class="flex h-6 text-xs">
      <span class="font-semibold text-gray-600">$<%= number_with_precision(price_alert.target_price, precision: 2) %></span>
    </div>

    <%= form_with model: price_alert, url: price_alert_path(price_alert), method: :patch,
          data: { inline_edit_target: "form" },
          class: "hidden flex items-center gap-1" do |f| %>
      <span class="text-gray-500">$</span>
      <%= f.number_field :target_price,
            step: 0.01,
            data: {
              inline_edit_target: "input",
              original_value: price_alert.target_price,
              action: "keydown->inline-edit#handleKeydown"
            },
            class: "w-full h-6 px-1 text-xs border border-gray-300 focus:outline-none" %>

      <button
        type="submit"
        data-inline-edit-target="updateButton"
        class="p-1 text-green-600 hover:text-green-700 cursor-pointer"
      >
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </button>

      <button
        type="button"
        data-action="click->inline-edit#cancel"
        data-inline-edit-target="cancelButton"
        class="p-1 text-red-600 hover:text-red-700 cursor-pointer"
      >
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    <% end %>
  </div>

  <div class="pt-3 border-t border-gray-100 flex items-center justify-between text-xs">
    <%= link_to price_alert.product, class: "text-gray-500 hover:text-gray-700 transition" do %>
      View
    <% end %>

    <div class="flex items-center gap-3">
      <button
        type="button"
        data-action="click->inline-edit#edit"
        class="text-gray-500 hover:text-gray-900 transition font-medium"
      >
        Edit
      </button>

      <button
        type="button"
        data-action="click->modal#open"
        class="text-gray-500 hover:text-red-600 transition font-medium"
      >
        Delete
      </button>
    </div>
  </div>
</div>

<% product = alert.product %>
<div class="bg-white rounded-lg p-3 shadow-sm hover:shadow-md transition-shadow border border-gray-200"
     data-alert-id="<%= alert.id %>">
  <%= link_to product, class: "block mb-2" do %>
    <h4 class="font-medium text-sm text-gray-900 mb-1 line-clamp-2 group-hover:text-gray-700">
      <%= product.name %>
    </h4>
    <p class="text-xs text-gray-500 truncate">
      <%= URI.parse(product.url) %>
    </p>
  <% end %>

  <div class="space-y-2 text-xs mt-3">
    <div class="flex items-center justify-between">
      <span class="text-gray-500">Current</span>
      <% if product.current_price %>
        <span class="font-semibold text-gray-900">$<%= number_with_precision(product.current_price, precision: 2) %></span>
      <% else %>
        <span class="text-gray-400">--</span>
      <% end %>
    </div>

    <div class="flex items-center justify-between">
      <span class="text-gray-500">Target</span>
      <span class="font-semibold text-gray-600">$<%= number_with_precision(alert.target_price, precision: 2) %></span>
    </div>
  </div>

  <% if status == 'checking' %>
    <div class="mt-3 flex items-center gap-2 text-xs text-blue-600">
      <svg class="w-3 h-3 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Checking price...
    </div>
  <% elsif status == 'reached' %>
    <div class="mt-3 pt-3 border-t border-gray-100">
      <div class="flex items-center gap-1 text-xs text-green-700 font-medium">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        Below target
      </div>
    </div>
  <% elsif status == 'error' %>
    <div class="mt-3 pt-3 border-t border-gray-100">
      <div class="flex items-center gap-1 text-xs text-red-700">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <%= product.check_status.titleize %>
      </div>
    </div>
  <% end %>

  <div class="mt-3 pt-3 border-t border-gray-100 flex items-center justify-between">
    <%= link_to product, class: "text-xs text-gray-500 hover:text-gray-700" do %>
      View
    <% end %>
    <%= button_to price_alert_path(alert), method: :delete,
                 data: { turbo_confirm: "Remove this alert?" },
                 class: "text-xs text-gray-500 hover:text-red-600" do %>
      Delete
    <% end %>
  </div>
</div>

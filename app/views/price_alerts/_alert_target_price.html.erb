<%= turbo_frame_tag "price_alert_#{price_alert.id}" do %>
  <% has_error = price_alert.errors[:target_price].any? %>

  <div data-controller="inline-edit" id="price_alert_<%= price_alert.id %>">
    <div class="flex items-center justify-between mb-2">
      <p class="text-sm text-gray-600">Target Price</p>

      <button
        type="button"
        data-action="click->inline-edit#edit"
        class="text-xs text-gray-500 hover:text-gray-900 transition font-medium inline-flex items-center gap-1"
      >
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
        </svg>
        Edit
      </button>
    </div>

    <div data-inline-edit-target="display" class="<%= 'hidden' if has_error %>">
      <p class="text-3xl font-semibold text-gray-600">
        $<%= number_with_precision(price_alert.target_price, precision: 2) %>
      </p>
      <% if price_alert.price_dropped? %>
        <p class="text-xs text-green-600 font-medium mt-2 inline-flex items-center gap-1">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Target reached
        </p>
      <% end %>
    </div>

    <%= form_with(model: price_alert, url: price_alert_path(price_alert), method: :patch,
                  data: { inline_edit_target: "form" },
                  class: "#{'hidden' unless has_error}"
    ) do |f| %>
      <div class="flex items-center gap-2">
        <span class="text-gray-500">$</span>
        <div class="relative flex-1 max-w-xs">
          <%= f.number_field :target_price,
                step: 0.01,
                required: true,
                data: {
                  inline_edit_target: "input",
                  original_value: price_alert.target_price,
                  action: "keydown->inline-edit#handleKeydown"
                },
                class: "w-full rounded-lg border #{has_error ? 'border-red-500' : 'border-gray-300'} text-xl px-3 py-2 focus:outline-none transition" %>
        </div>

        <button type="submit" class="p-1 text-green-600 hover:text-green-700">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </button>

        <button type="button" data-action="click->inline-edit#cancel" class="p-1 text-red-600 hover:text-red-700">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <% if price_alert.errors[:target_price].any? %>
        <p class="text-xs text-red-600 mt-2 font-medium" data-inline-edit-target="error">
          <%= price_alert.errors[:target_price].first %>
        </p>
      <% end %>
    <% end %>
  </div>
<% end %>
